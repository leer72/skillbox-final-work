{% extends 'dashboard/base.html.twig' %}
{% block body %}
<div class="container-fluid">
    <h1 class="mt-4">Рабочий стол</h1>
    <div class="row">
        <div class="col-xl-8 border-right">
            {% if subscriptionEnd is not null %}
            <div class="alert alert-warning" role="alert">
                Подписка истекает {{ subscriptionEnd | ago }}
            </div>
            {% endif %}

        <div class="card-columns dashboard">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ allArticles }}</h5>
                    <p class="card-text">Всего статей создано.</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ articlesPerMonth }}</h5>
                    <p class="card-text">Создано в этом месяце.</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ subscriptionName }}</h5>
                    <p class="card-text">Ваш уровень подписки.</p>
                    <a href="{{ path('app_dashboard_subscription') }}" class="btn btn-primary">Улучшить</a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Создать статью</h5>
                    <a href="{{ path('app_create_article') }}" class="btn btn-primary">Создать</a>
                </div>
            </div>
            {% if lastArticle is not null %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ lastArticle.title | striptags }}</h5>
                    <p class="card-text">{{ lastArticle.body | slice(0, 150) | striptags }}</p>
                    <a href="{{ path('app_dashboard_article_detail', { id: lastArticle.id }) }}" class="btn btn-primary">Подробнее</a>
                </div>
            </div>
            {% endif %}
        </div>
        </div>
    </div>
</div>
{% endblock %}
